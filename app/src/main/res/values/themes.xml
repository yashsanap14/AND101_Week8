        <item name="android:statusBarColor">@color/pokemon_red</item>
        <!-- Background color. -->
        <item name="android:windowBackground">@color/app_background</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/white</item>
